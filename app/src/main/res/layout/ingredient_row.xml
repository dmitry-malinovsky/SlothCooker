<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/items_background"
    android:elevation="6dp"
    android:maxHeight="80dp">

    <TextView
        android:id="@+id/ingredient_title_text_view"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="roboto"
        android:text="TextView"
        android:textColor="@color/colorPrimaryText"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:text="Placeholder" />

    <ImageView
        android:id="@+id/protein_ivageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingredient_title_text_view"
        app:srcCompat="@drawable/protein" />

    <ImageView
        android:id="@+id/carbs_ivageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/protein_ivageView"
        app:layout_constraintTop_toBottomOf="@+id/ingredient_title_text_view"
        app:srcCompat="@drawable/carbs"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/fat_imageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/carbs_ivageView"
        app:layout_constraintTop_toBottomOf="@+id/ingredient_title_text_view"
        app:srcCompat="@drawable/fat"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/calories_imageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/fat_imageView"
        app:layout_constraintTop_toBottomOf="@+id/ingredient_title_text_view"
        app:srcCompat="@drawable/kcal"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/ingredient_protein_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:text="123"
        android:textColor="@color/colorLightText"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/protein_ivageView"
        app:layout_constraintTop_toBottomOf="@+id/ingredient_title_text_view"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/ingredient_carbs_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="123"
        android:textColor="@color/colorLightText"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/carbs_ivageView"
        app:layout_constraintTop_toBottomOf="@+id/ingredient_title_text_view"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/ingredient_fat_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:text="123"
        android:textColor="@color/colorLightText"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/fat_imageView"
        app:layout_constraintTop_toBottomOf="@+id/ingredient_title_text_view"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/ingredient_calories_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:text="123"
        android:textColor="@color/colorLightText"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/calories_imageView"
        app:layout_constraintTop_toBottomOf="@+id/ingredient_title_text_view" />

</android.support.constraint.ConstraintLayout>